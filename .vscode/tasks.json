{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üé≠ Playwright: Run Current Test",
      "type": "shell",
      "command": "npx",
      "args": [
        "playwright",
        "test",
        "${file}",
        "--headed",
        "--project=chromium"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "üé≠ Playwright: Debug Current Test",
      "type": "shell",
      "command": "npx",
      "args": [
        "playwright",
        "test",
        "${file}",
        "--debug",
        "--headed",
        "--project=chromium",
        "--workers=1"
      ],
      "group": {
        "kind": "test"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "üé≠ Playwright: Run All E2E Tests",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "pw:test"
      ],
      "group": {
        "kind": "test"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "üé• Video: Open in VLC",
      "type": "shell",
      "command": "open",
      "args": ["-a", "VLC", "${file}"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üé• Video: Open All Failed Videos",
      "type": "shell",
      "command": "open",
      "args": ["-a", "VLC", "${workspaceFolder}/artifacts/videos/failed/*.webm"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üé• Video: Open in Browser",
      "type": "shell",
      "command": "open",
      "args": ["${file}"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üîç Trace: Open in Playwright Viewer",
      "type": "shell",
      "command": "npx",
      "args": ["playwright", "show-trace", "${file}"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "üîç Trace: Open Latest Failed Trace",
      "type": "shell",
      "command": "npx playwright show-trace $(ls -t ${workspaceFolder}/artifacts/traces/failed/*.zip | head -1)",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": []
    }
  ]
}
