{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "cucumber"],
    "importHelpers": true,
    "module": "CommonJS",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "ignoreDeprecations": "6.0",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ]
  }
}
