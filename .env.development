# ============================================================================
# .env.development - Ultimative Ultra SDET +++++ Final Version
# ============================================================================
# Development Environment Configuration für SDET Test Automation Framework
# 
# Dieses File enthält alle notwendigen Umgebungsvariablen für die
# Entwicklungs- und Test-Umgebung mit vollständiger Konfiguration für:
# - Browser & Playwright Einstellungen
# - Test-Ausführungs-Parameter
# - API & Service Endpunkte
# - Authentifizierung & Credentials
# - Logging & Reporting
# - Performance & Timeouts
# - Feature Flags & Debug-Modi
#
# WICHTIG: Nie echte Credentials in diesem File speichern!
# Verwende stattdessen .env.development.local für sensitive Daten
#
# ============================================================================
# ENVIRONMENT BASICS
# ============================================================================

# Umgebung
NODE_ENV=development
ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG_MODE=true

# Projekt-Konfiguration
PROJECT_NAME=SDET-PW-Practice
PROJECT_VERSION=1.0.0
PROJECT_OWNER=SDET Team

# ============================================================================
# BROWSER & PLAYWRIGHT SETTINGS
# ============================================================================

# Browser-Typ (chromium, firefox, webkit)
BROWSER=chromium
BROWSER_HEADLESS=false
BROWSER_SLOW_MOTION=100
BROWSER_LAUNCH_ARGS=--disable-web-resources,--disable-component-extensions-with-background-pages

# Multi-Browser Testing
ENABLE_FIREFOX=true
ENABLE_WEBKIT=true
ENABLE_CHROMIUM=true

# Browser Viewport & Display
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
DEVICE_SCALE_FACTOR=1
IS_MOBILE=false

# Browser-Kontext & Cookies
PERSISTENT_CONTEXT=false
ACCEPT_DOWNLOADS=true
IGNORE_HTTPS_ERRORS=true
JAVA_SCRIPT_ENABLED=true
BYPASS_CSP=false

# ============================================================================
# TEST EXECUTION SETTINGS
# ============================================================================

# Test-Framework & Runner
TEST_RUNNER=playwright
TEST_WORKER_THREADS=4
TEST_TIMEOUT=30000
TEST_REPORTER=html,json,allure
TEST_RETRIES=1
TEST_RETRY_EXIT_CODE=1

# Parallel Execution
PARALLEL_EXECUTION=true
MAX_WORKERS=4
FAIL_ON_CONSOLE_ERROR=false

# Test-Tags & Filter
TEST_TAGS=@smoke,@regression,@critical
SKIP_TAGS=@skip,@pending,@xfail
TEST_GREP=.*

# ============================================================================
# BASE URLS & ENDPOINTS
# ============================================================================

# Application URLs
BASE_URL=https://localhost:3000
STAGING_URL=https://staging.example.com
PRODUCTION_URL=https://app.example.com

# API Endpoints
API_BASE_URL=https://localhost:3001/api
API_V1_URL=https://localhost:3001/api/v1
API_V2_URL=https://localhost:3001/api/v2
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# Service Endpoints
AUTH_SERVICE_URL=https://localhost:3002/auth
PAYMENT_SERVICE_URL=https://localhost:3003/payments
NOTIFICATION_SERVICE_URL=https://localhost:3004/notifications
USER_SERVICE_URL=https://localhost:3005/users

# ============================================================================
# AUTHENTICATION & CREDENTIALS
# ============================================================================

# Test User Accounts (Use .env.development.local for real credentials!)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=${TEST_USER_PASSWORD:-changeme}
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=${TEST_ADMIN_PASSWORD:-changeme}

# API Keys & Tokens
API_KEY=${API_KEY:-test-api-key-12345}
JWT_SECRET=${JWT_SECRET:-test-jwt-secret}
BEARER_TOKEN=${BEARER_TOKEN:-test-bearer-token}

# OAuth Settings
OAUTH_CLIENT_ID=test-client-id
OAUTH_CLIENT_SECRET=${OAUTH_CLIENT_SECRET:-test-secret}
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# 2FA / MFA Settings
MFA_ENABLED=true
TOTP_SECRET=${TOTP_SECRET:-JBSWY3DPEBLW64TMMQ======}
BACKUP_CODES=code1,code2,code3

# ============================================================================
# LOGGING & REPORTING
# ============================================================================

# Logger Settings
LOGGER_FORMAT=json
LOGGER_OUTPUT_DIR=test-results
LOGGER_FILE_ROTATION=true
LOGGER_MAX_FILE_SIZE=10mb
LOGGER_MAX_FILES=5
LOGGER_COMPRESS_OLD=true

# Console Output
CONSOLE_LOG_LEVEL=debug
CONSOLE_LOG_COLORS=true
CONSOLE_LOG_TIMESTAMP=true

# File Logging
FILE_LOG_LEVEL=debug
FILE_LOG_PATH=test-results/test.log
FILE_LOG_ERROR_PATH=test-results/errors.log

# Report Settings
REPORT_DIR=./reports
REPORT_FORMAT=html,json,allure
ALLURE_REPORT_DIR=./reports/allure
ALLURE_RESULTS_DIR=./test-results/allure

# Screenshots & Videos
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_DIR=test-results/playwright/screenshots
VIDEO_RECORD=true
VIDEO_DIR=test-results/playwright/videos
TRACE_RECORD=true
TRACE_DIR=test-results/playwright/traces

# ============================================================================
# PERFORMANCE & TIMEOUTS
# ============================================================================

# Global Timeouts
NAVIGATION_TIMEOUT=30000
ELEMENT_WAIT_TIMEOUT=10000
API_TIMEOUT=10000
ASSERTION_TIMEOUT=5000
ANIMATION_TIMEOUT=2000

# Load Settings
WAIT_FOR_NETWORK_IDLE=true
WAIT_FOR_LOAD_STATE=networkidle
WAIT_STABILITY_MS=500

# Performance Budgets (in ms)
PERFORMANCE_BUDGET_CRITICAL=2000
PERFORMANCE_BUDGET_HIGH=5000
PERFORMANCE_BUDGET_MEDIUM=10000
PERFORMANCE_BUDGET_LOW=15000

# Request/Response Settings
RECORD_HAR=true
HAR_DIR=./hars
HAR_OMIT_CONTENT=false
NETWORK_IDLE_TIMEOUT=5000

# ============================================================================
# DATA MANAGEMENT
# ============================================================================

# Test Data
TEST_DATA_PATH=./src/data
TEST_DATA_FORMAT=json
TEST_DATA_ENCRYPTION=true
TEST_DATA_SEED=12345

# Database
DATABASE_URL=postgresql://localhost:5432/sdet_test
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=5000

# Data Cleanup
CLEANUP_AFTER_TEST=true
CLEANUP_ON_FAILURE=false
DATA_RETENTION_DAYS=30

# ============================================================================
# FEATURE FLAGS & DEBUG
# ============================================================================

# Feature Flags
FEATURE_AUTH_ENABLED=true
FEATURE_PAYMENTS_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_ADVANCED_SEARCH=false

# Debug Settings
DEBUG_MODE=true
DEBUG_SELECTORS=false
DEBUG_NETWORK=false
DEBUG_STORAGE=false
DEBUG_CONSOLE=true

# Step Debugging
STEP_BY_STEP=false
PAUSE_ON_FAILURE=false
INSPECT_SELECTORS=false

# ============================================================================
# ALLURE & REPORTING
# ============================================================================

# Allure Configuration
ALLURE_ENABLED=false
ALLURE_CLEAN_BEFORE_RUN=true
ALLURE_RESULTS_CLEAN=false
ALLURE_RESULTS_DIR=./test-results/allure/allure-results
ALLURE_REPORT_DIR=./test-results/allure/allure-report
ALLURE_HISTORY_PATH=./test-results/allure/history

# Allure Categories
ALLURE_ADD_CATEGORIES=true
ALLURE_CATEGORIES_PATH=./config/allure/categories.json

# Allure Executors
ALLURE_EXECUTOR_NAME=LocalDevelopment
ALLURE_EXECUTOR_TYPE=local
ALLURE_EXECUTOR_URL=http://localhost:3000

# ============================================================================
# CUCUMBER BDD SETTINGS
# ============================================================================

# Cucumber Configuration
CUCUMBER_ENABLED=true
CUCUMBER_FORMAT=html,json
CUCUMBER_REPORT_DIR=./reports/cucumber
CUCUMBER_REQUIRE_MODULE=ts-node/register
CUCUMBER_TIMEOUT=30000

# Feature Files
FEATURE_FILES=./src/features/**/*.feature
CUCUMBER_PROFILE=default

# ============================================================================
# EMAIL & NOTIFICATIONS (Development)
# ============================================================================

# Email Service (Development/Mock)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test@example.com
SMTP_PASSWORD=test123
SMTP_FROM=noreply@example.com

# Mock Email Service (for testing)
USE_MOCK_EMAILS=true
MOCK_EMAIL_DIR=./test-results/emails

# Notifications
NOTIFICATION_SERVICE=slack
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL:-}
SEND_TEST_REPORTS=false

# ============================================================================
# SLACK & INTEGRATIONS
# ============================================================================

# Slack Integration
SLACK_ENABLED=false
SLACK_WEBHOOK=${SLACK_WEBHOOK_URL:-}
SLACK_CHANNEL=#automation-tests
SLACK_NOTIFY_ON_FAILURE=true
SLACK_NOTIFY_ON_SUCCESS=false

# GitHub Integration
GITHUB_ENABLED=false
GITHUB_TOKEN=${GITHUB_TOKEN:-}
GITHUB_REPO=owner/repo

# Jira Integration
JIRA_ENABLED=false
JIRA_URL=https://jira.example.com
JIRA_USERNAME=${JIRA_USERNAME:-}
JIRA_API_TOKEN=${JIRA_API_TOKEN:-}
JIRA_PROJECT_KEY=AUTO

# ============================================================================
# ENCRYPTION & SECURITY
# ============================================================================

# Encryption Keys
ENCRYPTION_KEY=${ENCRYPTION_KEY:-default-dev-key}
JWT_SECRET_KEY=${JWT_SECRET_KEY:-default-jwt-key}
CIPHER_ALGORITHM=aes-256-cbc

# SSL/TLS Settings
USE_HTTPS=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem
IGNORE_CERTIFICATE_ERRORS=true

# CORS Settings
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ============================================================================
# PERFORMANCE MONITORING & TRACING
# ============================================================================

# Tracing
TRACE_ENABLED=true
TRACE_FORMAT=json,jaeger,zipkin
TRACE_EXPORT_PATH=./traces
TRACE_SAMPLING_RATE=1.0

# Distributed Tracing
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# Metrics Collection
METRICS_ENABLED=true
METRICS_EXPORT_INTERVAL=10000
METRICS_OUTPUT_DIR=./metrics

# Performance Profiling
PROFILE_ENABLED=false
PROFILE_OUTPUT_DIR=./profiles

# ============================================================================
# CACHE & OPTIMIZATION
# ============================================================================

# Caching
ENABLE_CACHING=true
CACHE_TTL=3600000
CACHE_MAX_SIZE=100

# Resource Optimization
COMPRESS_RESOURCES=true
MINIFY_CSS=false
MINIFY_JS=false
OPTIMIZE_IMAGES=false

# ============================================================================
# PROXY & NETWORK
# ============================================================================

# HTTP Proxy (for development)
HTTP_PROXY=${HTTP_PROXY:-}
HTTPS_PROXY=${HTTPS_PROXY:-}
NO_PROXY=localhost,127.0.0.1

# Network Settings
NETWORK_OFFLINE_MODE=false
NETWORK_SIMULATE_THROTTLING=false
NETWORK_UPLOAD_SPEED=50000
NETWORK_DOWNLOAD_SPEED=50000
NETWORK_LATENCY=0

# Request Interception
INTERCEPT_REQUESTS=true
MOCK_API_RESPONSES=true
MOCK_DATA_DIR=./src/mocks

# ============================================================================
# ACCESSIBILITY & COMPLIANCE
# ============================================================================

# A11y Testing
A11Y_TESTING_ENABLED=true
A11Y_STANDARDS=WCAG2AA
A11Y_REPORTER=pa11y

# Security Scanning
SECURITY_SCANNING=false
SECURITY_REPORT_PATH=./reports/security

# ============================================================================
# MAINTENANCE & HOUSEKEEPING
# ============================================================================

# Cleanup Settings
CLEANUP_LOGS=false
CLEANUP_REPORTS=false
CLEANUP_SCREENSHOTS=false
CLEANUP_DAYS=30

# Backup Settings
ENABLE_BACKUPS=true
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# ============================================================================
# DEVELOPMENT TOOLS & HELPERS
# ============================================================================

# VS Code Integration
VSCODE_DEBUG=false
VSCODE_DEBUG_PORT=9222

# Terminal Output
SHOW_BROWSER=true
SHOW_PROGRESS_BAR=true
COLORED_OUTPUT=true

# TypeScript
TS_NODE_TRANSPILE_ONLY=false
TS_NODE_PROJECT=./tsconfig.json

# ============================================================================
# EXPERIMENTAL FEATURES
# ============================================================================

# Experimental Settings
EXPERIMENTAL_MODE=false
ENABLE_AI_SELECTORS=false
ENABLE_VISUAL_REGRESSION=true
ENABLE_PERFORMANCE_ANALYSIS=true

# Mobile Testing
MOBILE_EMULATION=false
MOBILE_DEVICE=iPhone 12
MOBILE_TOUCH=true

# ============================================================================
# DOCUMENTATION & METADATA
# ============================================================================

# Documentation
GENERATE_DOCS=true
DOCS_OUTPUT_DIR=./docs
DOCS_FORMAT=markdown,html

# Metadata
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=test-results/audit.log
COLLECT_METRICS=true

# ============================================================================
# DEFAULTS & FALLBACKS
# ============================================================================

# Default Settings
DEFAULT_LANGUAGE=de
DEFAULT_TIMEZONE=Europe/Berlin
DEFAULT_LOCALE=de-DE

# Fallback URLs
FALLBACK_BASE_URL=https://example.com
FALLBACK_API_URL=https://api.example.com

# ============================================================================
# END OF DEVELOPMENT CONFIGURATION
# ============================================================================
# 
# Für produktive Credentials und sensitive Daten:
# - Erstelle .env.development.local
# - Nutze GitHub Secrets für CI/CD
# - Verwende AWS Secrets Manager / HashiCorp Vault in Produktion
